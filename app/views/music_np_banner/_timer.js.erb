setInterval(function () {
  const elapsed = document
    .getElementById("elapsed-time")
    .textContent.split(":");

  //by parsing integer, I avoid all extra string processing
  let minutes = parseInt(elapsed[0], 10);
  let seconds = parseInt(elapsed[1], 10);

  ++seconds;

  minutes = seconds > 59 ? ++minutes : minutes;
  seconds = seconds > 59 ? 0 : seconds;
  seconds = seconds < 10 ? "0" + seconds : seconds;
  minutes = minutes < 10 ? "0" + minutes : minutes;
  document.getElementById("elapsed-time").textContent = minutes + ":" + seconds;
}, 1000);

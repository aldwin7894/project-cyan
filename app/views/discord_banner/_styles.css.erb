* {
  margin: 0;
  padding: 0;
  font-family: "Noto Sans", sans-serif;
  -webkit-text-size-adjust: none;
  text-size-adjust: none;
  font-size: 100%;
  line-height: 1.3;
}

.main-container {
  position: relative;
  width: 600px;
  height: 122px;
  display: flex;
  color: #<%= @foreground %>;
  <% if @bottom_line.present? %>
    border-bottom: 4px solid #<%= @bottom_line %>;
  <% end %>
  background-image: linear-gradient(rgba(<%= @background %>), rgba(<%= @background %>)), url(<%= vite_url_to_base64(vite_asset_url("images/discord.webp")) %>);
  background-color: rgba(<%= @background %>);
}

.discord-logo {
  position: absolute;
  bottom: 5px;
  right: 5px;
  align-content: center;
  justify-content: center;
  display: flex;
}

.discord-logo svg {
  margin-top: auto;
  margin-bottom: auto;
  margin-right: 5px;
}

.avatar-container {
  padding: 10px 7px;
}

.avatar {
  border-radius: 9999px;
  outline-style: solid;
  outline-color: #fff;
  height: 102px;
  width: 102px;
  background-size: cover;
  background-image: url(<%= cached_image_url_to_base64(@avatar) %>);
  background-color: rgba(78, 85, 91, 0.8);
}

.status {
  position: absolute;
  left: 85px;
  bottom: 10px;
  width: 30px;
  height: 30px;
  border-radius: 9999px;
  padding: 3px;
  background: rgba(<%= @background.split(",").first(3).join(",") %>);
}

.info-container {
  position: relative;
  width: 100%;
  height: 112px;
  padding: 5px 10px;
}

.activity-title {
  margin-left: 2px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
  padding-right: 10px;
}

.activity-details-container {
  display: flex;
  align-items: center;
  max-width: 395px;
}

.spotify {
  min-width: 24px;
}

.activity-details {
  color: #E8C896;
  font-style: italic;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  width: 100%;
}

.username {
  color: #3CB4F1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  -webkit-text-size-adjust: auto;
  text-size-adjust: auto;
  line-height: normal;
}

.status-container {
  flex: 0 1 auto;
}

h1 {
  font-size: 32px;
}

h2 {
  font-size: 24px;
  font-weight: bold;
}

h3 {
  font-size: 18.72px;
}

h4 {
  font-size: 16px;
}

h5 {
  font-size: 13.28px;
}

h6 {
  font-size: 10.72px;
}

span, em, b, strong, i, p {
  font-size: 16px;
}

.offline {
  color: #777e8d;
}

.online {
  color: #62a45c;
}

.idle {
  color: #e6ae25;
}

.dnd {
  color: #cc5345;
}

.large-image {
  position: absolute;
  height: 86px;
  width: 64px;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: top center;
  right: 10px;
  top: 5px;
  background-image: url(<%= cached_image_url_to_base64(@activity&.[](:large_image)) %>);
}

.playing-container {
  display: flex;
  max-width: 395px;
  align-items: center;
}

.activity-subdetails-container {
  color: #0FD0BE;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  max-width: 350px;
}

<div class="bg-gray-100">
  <div>
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="sm:px-0 px-4">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Game ID</h3>
        </div>
      </div>
      <div class="md:mt-0 md:col-span-2 mt-5">
        <%= form_for [:admin, game_id], class: "w-full max-w-lg" do |f| %>
          <div class="sm:rounded-md sm:overflow-hidden shadow">
            <div class="sm:p-6 px-4 py-5 space-y-6 bg-white">
              <div class="grid grid-cols-3 gap-6">
                <div class="sm:col-span-2 col-span-3">
                  <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>

                  <div class="flex mt-1 rounded-md shadow-sm">
                    <%= f.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Username" %>
                  </div>
                </div>
              </div>
              <div class="sm:col-span-4 col-span-6">
                <%= f.label :ign, class: "block text-sm font-medium text-gray-700" %>

                <%= f.text_field :ign, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "IGN" %>
                <%# <input type="text" name="email_address" id="email_address" autocomplete="email" class="focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm block w-full mt-1 border-gray-300 rounded-md shadow-sm"> %>
              </div>
              <div class="sm:col-span-4 col-span-6">
                <%= f.label :game_id, class: "block text-sm font-medium text-gray-700" %>

                <%= f.text_field :game_id, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Game ID" %>
                <%# <input type="text" name="email_address" id="email_address" autocomplete="email" class="focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm block w-full mt-1 border-gray-300 rounded-md shadow-sm"> %>
              </div>
              <div class="sm:col-span-4 col-span-6">
                <%= f.label :icon_name, class: "block text-sm font-medium text-gray-700" %>

                <%= f.text_field :icon_name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Icon Name" %>
                <%# <input type="text" name="email_address" id="email_address" autocomplete="email" class="focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm block w-full mt-1 border-gray-300 rounded-md shadow-sm"> %>
              </div>
              <div class="sm:col-span-4 col-span-6">
                <%= f.label :icon_filename, class: "block text-sm font-medium text-gray-700" %>

                <%= f.text_field :icon_filename, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Icon Filename" %>
                <%# <input type="text" name="email_address" id="email_address" autocomplete="email" class="focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm block w-full mt-1 border-gray-300 rounded-md shadow-sm"> %>
              </div>
              <div class="sm:col-span-4 col-span-6">
                <%= f.label :icon_url, class: "block text-sm font-medium text-gray-700" %>

                <%= f.text_field :icon_url, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Icon URL" %>
                <%# <input type="text" name="email_address" id="email_address" autocomplete="email" class="focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm block w-full mt-1 border-gray-300 rounded-md shadow-sm"> %>
              </div>
            </div>
            <div class="bg-gray-50 sm:px-6 px-4 py-3 text-right">
              <button type="submit" class="hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm">
                Save
              </button>

              <a type="button" href="<%= admin_game_ids_path %>" class="hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm">
                Back
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

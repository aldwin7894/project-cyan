<turbo-frame id="last_watched" class="w-full h-full">
  <div class="w-full h-full bg-center bg-cover" style="background-image: url(<%= cached_image_url_to_base64 @last_watched&.[]("media")&.[]("bannerImage") %>)">
    <div class="backdrop-brightness-50 flex flex-col w-full h-full px-4 py-4 text-white">
      <div class="text-lg font-bold">LAST WATCHED</div>

      <% if @last_watched.present? %>
        <a class="hover:underline text-4xl font-bold" href="<%= @last_watched&.[]("media")&.[]("siteUrl") %>" target="_blank" rel="noopener">
          <%= @last_watched&.[]("media")&.[]("title")&.[]("userPreferred") %>
        </a>
        <div class="self-end mt-auto">
          <a class="hover:underline grow text-lg" href="<%= @last_watched&.[]("siteUrl") %>" target="_blank" rel="noopener">MORE INFO</a>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>

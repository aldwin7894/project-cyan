<turbo-frame id="total_watched_anime_movie">
  <h3 class="font-mono text-lg" data-tippy="tooltip" data-tippy-content="<%= @total_watched_anime_movie_time_mins&.to_fs(:delimited) %>m">
    <% @total_watched_anime_movie_time.each do |time, uom| %>
      <span class="text-2xl font-bold"><%= time %></span><%= uom %>
    <% end %>
  </h3>
  <h3>ALL TIME</h3>
  <h3 class="text-white text-opacity-80">
    <%= @total_watched_anime_movie&.to_fs(:delimited) %>
    movies / ova / specials
  </h3>
</turbo-frame>

          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-steam')" class="text-white hover:text-[#075a8e]">
            <iconify-icon icon="simple-icons:steam" width="50"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-github')" class="text-white hover:text-[#babbbd]">
            <iconify-icon icon="simple-icons:github" width="50"></iconify-icon>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "partials/divider" %>

            <iconify-icon icon="simple-icons:anilist" width="50"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-mal')" class="text-white hover:text-[#2f52a2]">
            <iconify-icon icon="simple-icons:myanimelist" width="90"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://spoti.fi/3PRGOmq')" class="text-white hover:text-[#1ed760]">
            <iconify-icon icon="akar-icons:spotify-fill" width="50"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-lastfm')" class="text-white hover:text-[#ba0000]">
            <iconify-icon icon="brandico:lastfm-rect" width="50"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-youtube')" class="text-white hover:text-[#ff0000]">
            <iconify-icon icon="simple-icons:youtube" width="50"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-twitch')" class="text-white hover:text-[#a970ff]">
            <iconify-icon icon="simple-icons:twitch" width="50"></iconify-icon>
          </button>
          <button x-on:click="window.open('https://bit.ly/cyan-musicbrainz')" class="text-white hover:text-[#eb743b]">

            </a>
          </div>
          <div class="flex flex-row flex-wrap justify-around col-span-12 gap-4 pt-10 pointer-events-auto phone:px-2 tablet:justify-center laptop:justify-start">
            <% @game_ids&.each do |game_id| %>
              <button aria-label="<%= game_id.name %>" type="button" data-mdb-ripple="true" data-mdb-ripple-color="light" class="rounded-md h-fit shine-effect" data-tippy="popover" data-tippy-template="popover<%= game_id.id %>">
                <%= image_tag vite_asset_path("images/icons/#{game_id.icon_filename}"), width: 50, height: 50, alt: game_id.name %>
                <div class="shine"></div>
              </button>

              <div id="popover<%= game_id.id %>" role="tooltip" class="hidden">
                <div class="max-w-[226px] dark:bg-[#0b1622] dark:text-white">
                  <h3 class=" tippy-popover-header border-b-black dark:border-b-white border-b-[1px] "><%= game_id.name %></h3>
                  <h3 class="text-left tippy-popover-body"><%= "ID: #{game_id.game_id}\nIGN: #{game_id.ign}" %></h3>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div></div>
      </div>
    </div>
  </div>
</section>
<%= render "partials/divider" %>
